    <script>
      const cardId = JSON.parse('<%-JSON.stringify(cardId)%>');
      const cardName = JSON.parse('<%-JSON.stringify(cardName)%>');


      const downloadMaterias = () => {
        document.querySelector('.count').style.display = 'block';

        setTimeout(() => {
          document.querySelector('.count').style.display = 'none'
        }, 13000)

        async function get(url) {
          const response = await fetch(url);

          console.log(response.status)
          return response.arrayBuffer();
        }

        get("/download-materias/" + cardId)
          .then(res => {
            download(res, `${cardName}.zip`, "application/zip")
          }).catch(e => console.log(e));
      }



    </script>


    <script>

      const materias = JSON.parse('<%-JSON.stringify(materias)%>');

      const transformDate = (date) => {
        let data = new Date(date);
        return
        `${String(data.getDay()).length === 1 ? '0' + String(data.getDay()) : String(data.getDay())}
          /${String(data.getMonth()).length === 1 ? '0' + String(data.getMonth()) : String(data.getMonth())}
          /${data.getFullYear()}`
      }


      const novaMateria = materias.map(materia => {
        return {
          index: materia.index,
          fullDate: transformDate(materia.fullDate),
          name: materia.name,
          url: materia.url
        }
      });
      console.log(novaMateria)

      console.log(materias)
      $(document).ready(function () {

        $('#materias_table').DataTable({
          fixedHeader: {
            header: true,
